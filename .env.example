# JWT Secret (REQUIRED - Generate with: openssl rand -hex 32)
JWT_SECRET_KEY=

# Database Configuration (Optional - defaults provided)
DB_FILE_PATH=data/app.db
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=20
DB_CONNECTION_TIMEOUT=30
DB_IDLE_TIMEOUT=300

# File Storage Configuration (Optional - defaults provided)
UPLOAD_DIR=uploads/menu-images
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_MIME_TYPES=image/*

# Logging Configuration (Optional - defaults provided)
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app-{date}.log
LOG_RETENTION_DAYS=30

# Cache Configuration (Optional - defaults provided)
CACHE_TTL=300  # 5 minutes in seconds

# SSE Configuration (Optional - defaults provided)
SSE_HEARTBEAT_INTERVAL=30  # seconds

# CORS Configuration (Development)
CORS_ORIGINS=http://localhost:3000

# Frontend API URL (Optional - defaults provided)
VITE_API_URL=http://localhost:8000
VITE_SSE_URL=http://localhost:8000
