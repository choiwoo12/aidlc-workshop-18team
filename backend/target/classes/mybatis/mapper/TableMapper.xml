<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tableorder.mapper.TableMapper">

    <resultMap id="TableResultMap" type="com.tableorder.domain.Table">
        <id property="id" column="id"/>
        <result property="storeId" column="store_id"/>
        <result property="tableNumber" column="table_number"/>
        <result property="sessionId" column="session_id"/>
        <result property="sessionActive" column="session_active"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findById" resultMap="TableResultMap">
        SELECT * FROM `table`
        WHERE id = #{id}
    </select>

</mapper>
